{
    "version": 2,
    "public": true,
    "outputDirectory": "public",
    "cleanUrls": true,
    "trailingSlash": false,
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        }
    ],
    "headers": [
        {
            "source": "/lib/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
} 